<Window x:Class="Euterpe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Euterpe"
        Width="1000"
        Height="650"
        Background="#121212">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>

        <!-- GRID DE ÁLBUNS -->
        <ScrollViewer Grid.Row="0">
            <ItemsControl x:Name="AlbumGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Click="Album_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Margin="10">

                            <StackPanel Width="150">
                                <Border Height="150"
                                        Background="#1E1E1E">
                                    <Image Source="{Binding CoverPath}"
                                           Stretch="UniformToFill"/>
                                </Border>

                                <TextBlock Text="{Binding Name}"
                                           Foreground="White"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,6,0,0"/>
                            </StackPanel>

                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- PLAYER -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock x:Name="TrackNameText"
                       Foreground="White"
                       TextAlignment="Center"/>

            <Slider x:Name="ProgressSlider"
                    PreviewMouseDown="Slider_Down"
                    PreviewMouseUp="Slider_Up"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button Content="⏮" Width="60" Click="Prev_Click"/>
                <Button Content="▶ / ⏸" Width="80" Click="PlayPause_Click"/>
                <Button Content="⏭" Width="60" Click="Next_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
