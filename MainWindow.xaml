<Window x:Class="Euterpe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Euterpe"
        Width="1100"
        Height="750"
        Background="#121212">

    <Window.Resources>
        <!-- Animação contínua da capa -->
        <Storyboard x:Key="RotateCover" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                From="0"
                To="360"
                Duration="0:0:25"/>
        </Storyboard>
    </Window.Resources>

    <DockPanel>

        <!-- BUSCA COM PLACEHOLDER (WPF) -->
        <Grid DockPanel.Dock="Top" Margin="10">
            <TextBox x:Name="SearchBox"
                     Height="36"
                     Background="#1E1E1E"
                     Foreground="White"
                     FontSize="14"
                     TextChanged="SearchBox_TextChanged"/>

            <TextBlock Text="Buscar artista ou álbum"
                       Foreground="Gray"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.IsEmpty,
                                            ElementName=SearchBox,
                                            Converter={StaticResource BoolToVisibility}}"/>
        </Grid>

        <!-- GRID DE ÁLBUNS -->
        <ScrollViewer>
            <ItemsControl x:Name="AlbumsGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="160"
                                    Margin="12"
                                    MouseLeftButtonUp="Album_Click">

                            <Image Width="150"
                                   Height="150"
                                   Source="{Binding CoverPath}"
                                   RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <RotateTransform/>
                                </Image.RenderTransform>
                            </Image>

                            <TextBlock Text="{Binding Name}"
                                       Foreground="White"
                                       TextAlignment="Center"
                                       Margin="0,6,0,0"/>

                            <TextBlock Text="{Binding Artist}"
                                       Foreground="Gray"
                                       FontSize="11"
                                       TextAlignment="Center"/>

                            <TextBlock Text="{Binding Year}"
                                       Foreground="Gray"
                                       FontSize="10"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </DockPanel>
</Window>
