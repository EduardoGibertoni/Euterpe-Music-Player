<Window x:Class="Euterpe.AlbumTracksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faixas do Álbum"
        Width="600"
        Height="700"
        Background="#121212"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="10">

        <!-- TOPO -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="← Voltar"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Back_Click"/>

            <TextBlock x:Name="AlbumTitle"
                       Foreground="White"
                       FontSize="16"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- LISTA DE MÚSICAS -->
        <ListBox x:Name="TracksList"
                 Background="#181818"
                 BorderThickness="0"
                 Foreground="White"
                 MouseDoubleClick="Track_DoubleClick">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               Padding="10"
                               FontSize="13"/>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

    </DockPanel>
</Window>
