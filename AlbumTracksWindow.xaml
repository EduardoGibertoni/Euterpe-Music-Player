<Window x:Class="Euterpe.AlbumTracksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faixas do Álbum"
        Height="700"
        Width="500"
        Background="#111">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image x:Name="AlbumCover"
               Width="260"
               Height="260"
               Stretch="UniformToFill"
               HorizontalAlignment="Center"
               Margin="0,0,0,12"/>

        <TextBlock x:Name="TrackNameText"
                   Grid.Row="1"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Margin="0,4"/>

        <TextBlock x:Name="ArtistNameText"
                   Grid.Row="2"
                   Foreground="#AAAAAA"
                   FontSize="13"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>

        <Grid Grid.Row="3" Margin="0,4,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="CurrentTimeText"
                       Grid.Column="0"
                       Foreground="White"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"
                       Text="00:00"/>

            <Slider x:Name="ProgressSlider"
                    Grid.Column="1"
                    Minimum="0"
                    PreviewMouseDown="ProgressSlider_PreviewMouseDown"
                    PreviewMouseUp="ProgressSlider_PreviewMouseUp"/>

            <TextBlock x:Name="TotalTimeText"
                       Grid.Column="2"
                       Foreground="White"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       Text="00:00"/>
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Vertical">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10">

                <Button Content="⏮"
                        Width="50"
                        Height="32"
                        Margin="6"
                        Click="Prev_Click"/>

                <Button Content="⏯"
                        Width="60"
                        Height="32"
                        Margin="6"
                        Click="PlayPause_Click"/>

                <Button Content="⏭"
                        Width="50"
                        Height="32"
                        Margin="6"
                        Click="Next_Click"/>
            </StackPanel>

            <ListBox x:Name="TracksList"
                     Background="#1A1A1A"
                     Foreground="White"
                     BorderThickness="0"
                     SelectionChanged="TracksList_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>
